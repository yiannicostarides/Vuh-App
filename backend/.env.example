# Server Configuration
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/grocery_deals_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=grocery_deals_db
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# Test Database Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=grocery_deals_test
TEST_DB_USER=username
TEST_DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# External API Keys
KROGER_CLIENT_ID=your-kroger-client-id
KROGER_CLIENT_SECRET=your-kroger-client-secret
KROGER_API_BASE_URL=https://api.kroger.com/v1

# Push Notifications
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.grocerydeals.app
APNS_PRIVATE_KEY_PATH=./certs/apns-private-key.p8
APNS_PRODUCTION=false

# Logging
LOG_LEVEL=info

# Scraping Configuration
PUBLIX_BASE_URL=https://www.publix.com
SCRAPING_USER_AGENT=Mozilla/5.0 (compatible; GroceryDealsBot/1.0)
SCRAPING_DELAY_MS=1000
SCRAPING_TIMEOUT_MS=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_DEALS=3600
CACHE_TTL_STORES=86400
CACHE_TTL_PRICE_COMPARISON=1800